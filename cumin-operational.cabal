cabal-version:       >=1.10

library
  exposed-modules:   Cumin.Operational
                   , Cumin.Operational.EvalMonad
                   , Cumin.Operational.Evaluation
                   , Cumin.Operational.NormalForms
                   , Cumin.Operational.Tree
                   , Cumin.Operational.Util
